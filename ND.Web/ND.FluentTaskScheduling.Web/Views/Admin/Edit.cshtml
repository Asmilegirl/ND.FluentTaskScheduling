@model ND.FluentTaskScheduling.Model.response.LoadUserDetailResponse
@using ND.FluentTaskScheduling.Model;
@{
    ViewBag.Title = "编辑用户";
    List<tb_user> userlist = ViewBag.UserList as List<tb_user>;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content-header">
    <h1>
        添加用户
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> 用户管理</a></li>
        <li><a href="#">添加用户</a></li>
    </ol>
</section>


@using (Html.BeginForm("Edit", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <input type="hidden" name="UserId" value='@ViewBag.userid'/>

        <div class="box box-primary col-md-6 pull-right">
            <div class="box-body">
                <div class="row">
                    <div class="form-group col-md-6">
                        <label>姓名:</label>
                        <input type="text" name="UserRealName" value="@Model.UserDetail.realname" class="form-control" placeholder="姓名">
                    </div>
                </div>

                

                <div class="row">
                    <div class="form-group col-md-6">
                        <label>角色名称:</label>
                        <select class="form-control select2" name="Role" id="selrole">
                            <option value="-1">全部</option>
                            @foreach (var o in (ND.FluentTaskScheduling.Helper.EnumHelper<ND.FluentTaskScheduling.Model.enums.RoleName>.GetAllEnumsOfList2()))
                            {
                                <option value="@o.Value" @((Model.UserDetail.userrole + "") == o.Value ? "selected='selected'" : "")>@o.Text</option>
                            }
                        </select>

                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-md-6">
                        <label>手机号:</label>
                        <input type="text" name="UserMobile" value="@Model.UserDetail.usermobile" class="form-control" onkeyup="this.value=this.value.replace(/\D/g,'')" onafterpaste="this.value=this.value.replace(/\D/g,'')" placeholder="手机号">
                    </div>
                </div>



                <div class="row">
                    <div class="form-group col-md-6">
                        <label>邮箱:</label>
                        <input type="text" class="form-control" value="@Model.UserDetail.useremail" name="UserEmail" placeholder="邮箱">
                    </div>
                </div>



                <div class="row">
                    <div class="form-group col-md-3">
                        <a href="/User/Index" class="btn pull-right">返回列表</a>
                        <button type="submit" class="btn margin-r-5 btn-primary pull-right">保存</button>
                    </div>
                </div>

            </div>

        </div>
    </div>

}

